{
  "name": "web-tui",
  "version": "0.1.0",
  "description": "Framework-agnostic terminal UI components. Use with any framework or vanilla HTML/CSS.",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./css": {
      "import": "./src/css/web-tui.css",
      "require": "./src/css/web-tui.css"
    },
    "./plugin": {
      "import": "./src/css/plugin.js",
      "require": "./src/css/plugin.js"
    },
    "./js": {
      "import": "./src/css/web-tui.js",
      "require": "./src/css/web-tui.js"
    },
    "./react": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx"
  ],
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "tsc --noEmit --watch",
    "test": "bun test",
    "lint": "biome check src/"
  },
  "keywords": [
    "terminal",
    "tui",
    "ui",
    "components",
    "tailwind",
    "css",
    "react",
    "framework-agnostic",
    "daisy-ui",
    "cli"
  ],
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.0.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.19",
    "bun-types": "latest",
    "happy-dom": "^20.0.10",
    "postcss": "^8.4.38",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.4"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  }
}
